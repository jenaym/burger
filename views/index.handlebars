<h1>Eat-Da-Burger!</h1>


<div class="container">
  <div class="row">
    <div class="col-6">
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{burger_name}}
          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="id" value="{{this.id}}">
            <button type="submit">Devour It!</button>
          </form>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-6" id="burgerEaten">
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{burger_name}}
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <h2>Add a Burger!</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="burgerN">Burger Name:</label>
          <input type="text" id="burgerN" name="burger_name">
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>