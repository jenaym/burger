
<div class="container">
<div class="jumbotron" id="jumbo">Eat-Da-Burger</div>
  <div class="row">
    <div class="col-lg-6">
      <div class="undevoured-list">
        <h3>Burgers to Devour!</h3>
        <ul>
        {{#each burgers}}
        {{#unless devoured}}
            <li>
              <p>{{burger_name}}
                  <button class="devourButton" burgerID="{{id}}">Devour It!</button>
              </p>
            </li>
        {{/unless}}
        {{/each}}
        </ul>
      </div>
    </div>


    <div class="col-lg-6" id="burgerEaten">
      
      <div class="devoured-list">
        <h3>Burgers Devoured!</h3>
        <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>
              <p>{{burger_name}}</p>
            </li>          
          {{/if}}
        {{/each}}
        </ul>
      </div>

    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <h2>Add a Burger!</h2>
      <form class="create-form" action="/api/burgers" method="POST">
        <div class="form-group">
          <label for="burgerN">Burger Name:</label>
          <input type="text" id="burgerN" name="burger_name">
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>

